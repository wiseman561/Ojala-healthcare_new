<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <!-- Where the SDK should place downloaded packages -->
  <config>
    <add key="globalPackagesFolder" value=".nuget/packages" />
  </config>

  <!-- Never probe the built-in Visual-Studio fallback folders -->
  <fallbackPackageFolders>
    <clear />
  </fallbackPackageFolders>

  <!-- âœ…  Explicit feeds: start clean, then add nuget.org        -->
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>

</configuration>
